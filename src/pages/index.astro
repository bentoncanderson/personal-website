---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>Hello there!</h1>
			<p>
				Welcome to my blog! To read my writing, click the 'Writing' tab. To see my reading list, click the 'Reading' tab.
				To view some info about my hobbies, click the 'Hobbies' tab. To see more about me, click the 'About' tab.
			</p>
		</main>
		<Footer />
	</body>
</html>
